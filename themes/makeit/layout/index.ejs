

<div class="jumbotron">
  <h1> Hexo blog de Programacion de <%= config.author %></h1>
  <p><%= config.subtitle %></p>
</div>

<div class='row'>
  <div class="col-md-8 col-md-offset-2">
    <ul>
  	<% page.posts.each(function(post){ %>
      	<li>
      		<h3>
                  <a href="<%- url_for(post.path) %>">
          			<%= post.title %>
          		</a>
              </h3>
              <div class='text-muted'>
                  <%= date(post.date, config.date_format) %>
              </div>

              <% if(post.excerpt) { %>
                  <p>
                      <%- post.excerpt %>
                  </p>
              <% } %>
      	</li>
    	<% }) %>
  	</ul>
  </div>
	
</div>
